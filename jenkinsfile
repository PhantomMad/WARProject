pipeline {
    agent any
    tools {
        terraform 'tf1.2.9'
    }
    stages {
        stage('Copy sec TFiles') {
            steps {
                sh 'cp /home/jenkins/main.tf .'
                sh 'cp /home/jenkins/.terraformrc /var/lib/jenkins'
            }
        }
        stage('Init TF provider'){
            steps {
                sh 'terraform init'
            }
        }
    }
}